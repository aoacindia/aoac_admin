// prisma/admin.schema.prisma
datasource db {
  provider = "mysql"
  url      = env("ADMIN_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/admin"
}

model User {
  id              String    @id @default(cuid())
  name            String
  email           String    @unique
  role            AdminRole @default(STAFF)
  suspended       Boolean  @default(false)
  suspended_number Int      @default(0)
  terminated      Boolean  @default(false) 
  phone           String    @unique
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

enum AdminRole {
  ADMIN
  MANAGER
  STAFF
}

model OtpVerification {
  id         String   @id @default(cuid())
  email      String?
  token      String   @unique
  otp        String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  @@index([email])
  @@index([token])
}

model Office {
  id        String   @id @default(cuid())
  gstin     String   @unique
  address   String
  city      String?
  state     String
  stateCode String
  pincode   String?
  country   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  id                String   @id @default(cuid())
  accountHolderName String
  accountNumber     String
  ifsc              String
  branch            String
  swiftCode         String?
  bankName          String
  isDefault         Boolean  @default(false) @map("default")
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}


