// prisma/admin.schema.prisma
datasource db {
  provider = "mysql"
  url      = env("ADMIN_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/admin"
}

model User {
  id               String    @id @default(cuid())
  name             String
  email            String    @unique
  role             AdminRole @default(STAFF)
  suspended        Boolean   @default(false)
  suspended_number Int       @default(0)
  terminated       Boolean   @default(false)
  phone            String    @unique
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

enum AdminRole {
  ADMIN
  MANAGER
  STAFF
}

model OtpVerification {
  id        String   @id @default(cuid())
  email     String?
  token     String   @unique
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([token])
}

model Office {
  id        String   @id @default(cuid())
  gstin     String   @unique
  address   String
  state     String
  stateCode String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
